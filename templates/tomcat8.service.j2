[Unit]
Description=LSB: Start {{ tomcat_service_name }} server.
SourcePath=/etc/init.d/{{ tomcat_service_name }}
Before=multi-user.target
Before=graphical.target
After=syslog.target
After=remote-fs.target
After=network-online.target
After=nss-lookup.target
Wants=network-online.target

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
SuccessExitStatus=5 6
ExecStart=/etc/init.d/{{ tomcat_service_name }} start
ExecStop=/etc/init.d/{{ tomcat_service_name }} stop
